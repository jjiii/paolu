	</mvc:cors>
	
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/swagger/**" />
			<mvc:exclude-mapping path="/api-docs/**" />
			<mvc:exclude-mapping path="/static/**" />
			<mvc:exclude-mapping path="/view/**" />
			<mvc:exclude-mapping path="/WEB-INF/view/**" />
			<bean class="com.fc.log.client.interceptor.LoggingTagInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
	 
