<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fc.pay.boss.dao.BossRoleOperatorMapper">
  <resultMap id="BaseResultMap" type="com.fc.pay.boss.entity.BossRoleOperator" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="creater" property="creater" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="editor" property="editor" jdbcType="VARCHAR" />
    <result column="edit_time" property="editTime" jdbcType="TIMESTAMP" />
    <result column="status" property="status" jdbcType="VARCHAR" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
    <result column="role_id" property="roleId" jdbcType="BIGINT" />
    <result column="operator_id" property="operatorId" jdbcType="BIGINT" />
  </resultMap>
  
	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		id, creater, create_time AS createTime, editor, edit_time AS editTime, status, remark, role_id AS roleId, operator_id AS operatorId
	</sql>
	
	<!--批量插入分配的角色信息-->
	<insert id="insertBatchRecord" parameterType="List" >
		INSERT INTO boss_role_operator (creater,create_time,editor,edit_time,status,remark,role_id,operator_id) VALUES
		<foreach collection ="list" item="operatorRole" index= "index" separator =",">
			(#{operatorRole.creater},
			#{operatorRole.createTime},
			#{operatorRole.editor},
			#{operatorRole.editTime},
			#{operatorRole.status},
			#{operatorRole.remark},
			#{operatorRole.roleId},
			#{operatorRole.operatorId})
        </foreach >
	</insert>
	
	<delete id="deleteByMap" parameterType="Map" >
    	delete from boss_role_operator
		<where>
			<if test=" operatorId!=null and operatorId !='' ">
				and operator_id = #{operatorId}
			</if>
		</where>
 	</delete>	
	
	<select id="selectCount" resultType="Integer" parameterType="java.lang.Long" >
		select count(1)
		from boss_role_operator
		<where>
			<if test="roleId != null and roleId != ''">
				and role_id = #{roleId}
			</if>
		</where>
	</select>	
	
	<select id="selectList" resultMap="BaseResultMap" parameterType="Map" >
		select 
		<include refid="Base_Column_List" />
		from boss_role_operator
		<where>
			<if test="operatorId != null and operatorId != ''">
				and operator_id = #{operatorId}
			</if>
		</where>	
	</select>	

</mapper>